<head> 
    <title>SubManager</title>
    <link rel="shortcut icon" href="budget.png">
    <script src="https://kit.fontawesome.com/4b61b8d847.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<header>
    <div class="nav">
        <span><a href="/dashboard">Home</a></span>
        <span><a href="/mysubs">My Subs</a></span>
    </div>
</header>

<body class="main">
    <h1>Hi, <%= @user.username %>!</h1>

    <div class="error">
        <%= @error %>
    </div>

    <h2> Enter A Subscription </h2>

    <form action="/mysubs/new" method="post">
        <label>Name</label>
        <input type="text" name="name">

        <label>Type</label>
        <select id="type" name="sub_type">
            <option value="Entertainment">Entertainment</option>
            <option value="Lifestyle">Lifestyle</option>
            <option value="Food/Drink">Food/Drink</option>
            <option value="Pet">Pet</option>
        </select>
   
        <label>Amount</label>
        <input type="text" name="amount">

        <label>Frequency</label>
        <select id="frequency" name="frequency">
            <option value="Monthly">Monthly</option>
            <option value="Quarterly">Quarterly</option>
            <option value="Annually">Annually</option>
        </select>
        <button type="submit">Add Subscription</button>
    </form>
</body>