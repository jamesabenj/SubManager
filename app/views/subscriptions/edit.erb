<head> 
    <title>SubManager</title>
    <link rel="shortcut icon" href="budget.png">
    <script src="https://kit.fontawesome.com/4b61b8d847.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="main">
<a href="/mysubs/<%= @sub.id %>">Cancel Edit</a>

<h1>Edit Subscription</h1>

<form action="/mysubs/<%= @sub.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" name="subscription[name]" value="<%= @sub.name%>"/><br />
  <label>Type</label>
  <select id="sub_type" name="subscription[sub_type]">
      <option value="Entertainment">Entertainment</option>
      <option value="Lifestyle">Lifestyle</option>
      <option value="Food/Drink">Food/Drink</option>
      <option value="Pet">Pet</option>
  </select>
  <label>Amount</label>
  <input type="text" name="subscription[amount]">
  <label>Frequency</label>
  <select id="frequency" name="subscription[frequency]">
      <option value="Monthly">Monthly</option>
      <option value="Quarterly">Quarterly</option>
      <option value="Annually">Annually</option>
  </select>
  <input type="submit" value="Submit">
</form>

</body>